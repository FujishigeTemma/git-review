{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-extension",
            "type": "shell",
            "command": "pnpm run build",
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "dev-extension",
            "type": "shell",
            "command": "pnpm run dev",
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "build started",
                        "endsPattern": "built in \\d+"
                    }
                }
            ]
        }
    ]
}
